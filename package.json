{
  "name": "koa-sample-web-app-api-mysql",
  "description": "Koa Sample App (handlebars templating + RESTful API using MySQL, on Node.js)",
  "author": "Chris Veness",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisveness/koa-sample-web-app-api-mysql.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 -c 'node -r esm' app.js",
    "start-dev": "nodemon -e js,json,html -r dotenv/config -r esm app.js",
    "start-devtools": "nodemon --inspect -e js,json,html -r dotenv/config -r esm app.js",
    "test": "npm run test-node && npm run test-frontend",
    "test-node": "mocha --exit -r esm test/*/*.js",
    "test-frontend": "node -r dotenv/config -r esm app.js & pid=$!; cypress run; status=$?; kill -9 $pid; rm -r ./cypress; exit $status",
    "lint": "eslint --ignore-pattern app-api/apidoc .",
    "cover": "nyc --reporter=html npm test; rm -r ./.nyc_output",
    "apidoc": "apidoc -i app-api -o app-api/apidoc/apidoc"
  },
  "engines": {
    "node": ">=10.5.0"
  },
  "dependencies": {
    "dateformat": "^3.0.0",
    "debug": "^4.0.0",
    "esm": "^3.0.0",
    "forever": "^1.0.0",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.0",
    "html-to-text": "^5.0.0",
    "isemail": "^3.0.0",
    "js-yaml": "^3.0.0",
    "jsdom": "^15.0.0",
    "jsonwebtoken": "^8.0.0",
    "koa": "^2.0.0",
    "koa-body": "^4.0.0",
    "koa-compose": "^4.0.0",
    "koa-compress": "^3.0.0",
    "koa-convert": "^1.0.0",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^2.0.0",
    "koa-lusca": "git://github.com/chrisveness/koa-lusca",
    "koa-router": "^7.0.0",
    "koa-session": "^5.0.0",
    "koa-static": "^5.0.0",
    "markdown-it": "^8.0.0",
    "mongodb": "^3.0.0",
    "mysql2": "^1.0.0",
    "node-fetch": "^2.6.1",
    "nodejs-info": "^1.0.0",
    "nodemailer": "^6.0.0",
    "scrypt-kdf": "^2.0.0",
    "useragent": "^2.0.0",
    "xmlify": "^1.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.0",
    "chai": "^4.0.0",
    "cypress": "^3.0.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.0.0",
    "mocha": "^6.0.0",
    "nodemon": "^1.0.0",
    "nyc": "^14.0.0",
    "supertest": "^4.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "comma-spacing": [
        "error"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ],
      "keyword-spacing": [
        "error"
      ],
      "no-case-declarations": "off",
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "info"
          ]
        }
      ],
      "no-redeclare": "warn",
      "no-shadow": "warn",
      "no-unused-vars": "warn",
      "no-var": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": "error",
      "quotes": [
        "error",
        "single",
        "avoid-escape"
      ],
      "require-await": "error",
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-in-parens": [
        "error"
      ],
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
